<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_category_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:layout_above="@+id/iv_calendar_icon"
                android:layout_toLeftOf="@+id/tv_category_name"
                android:layout_toStartOf="@+id/tv_category_name" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="18sp"
                android:text="Housing"
                android:layout_toRightOf="@+id/iv_calendar_icon"
                android:layout_toStartOf="@+id/tv_time"
                android:layout_alignRight="@+id/et_transaction_comment"
                android:layout_alignEnd="@+id/et_transaction_comment"
                android:layout_toLeftOf="@+id/tv_time" />

            <ImageView
                android:id="@+id/iv_calendar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_event_black_24dp"
                android:layout_below="@+id/tv_category_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_transaction_date"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="23 Feb, 2016"
                android:layout_toRightOf="@+id/iv_comment"
                android:layout_alignTop="@+id/iv_calendar_icon"
                android:layout_alignBottom="@+id/iv_time_icon"
                android:layout_toStartOf="@+id/iv_time_icon"
                android:layout_toLeftOf="@+id/iv_time_icon" />

            <ImageView
                android:id="@+id/iv_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_below="@+id/tv_category_name"
                android:layout_toLeftOf="@+id/tv_time"
                android:layout_toStartOf="@+id/tv_time"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_category_name"
                android:gravity="left"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="12:35"
                android:layout_alignRight="@+id/et_transaction_comment"
                android:layout_alignEnd="@+id/et_transaction_comment"
                android:layout_alignBottom="@+id/iv_time_icon" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_sort_black_24dp"
                android:layout_alignTop="@+id/et_transaction_comment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/et_transaction_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="Enter comment"
                android:layout_below="@+id/tv_time"
                android:layout_toRightOf="@+id/iv_comment"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:id="@+id/cb_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/sp_due_by_to"
                android:entries="@array/due_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_time_icon"
                android:layout_toRightOf="@+id/iv_comment"
                android:layout_toEndOf="@+id/iv_comment" />

            <EditText
                android:id="@+id/et_due_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter a name"
                android:layout_alignBottom="@+id/cb_due"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/cb_due"
                android:layout_alignLeft="@+id/iv_time_icon"
                android:layout_alignStart="@+id/iv_time_icon" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>