<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp" >

    <ImageView
        android:id="@+id/iv_transfer_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:src="@drawable/ic_swap_horiz_purple_36dp"
        android:contentDescription="@string/transaction_color" />

    <TextView
        android:id="@+id/tv_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_transfer_icon"
        android:paddingLeft="10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/et_transfer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_day_of_week"
        android:paddingLeft="10dp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/tv_transfer_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_day_of_week"
        android:layout_toRightOf="@id/iv_transfer_icon"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_transfer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_transfer_comment"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textSize="17sp"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>